<div class="results-block">
  <%= render "shared/messages" %>
</div>
<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Email:</strong> <%= friend.email %></td>
            <td><strong>First name:</strong> <%= friend.first_name %></td>
            <td><strong>Last name:</strong> <%= friend.last_name %></td>
            <td><strong>Profile:</strong> <%= link_to "View profile", "#", class: "btn btn-sm btn-success" %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to "Follow friend?", friendships_path({friend: friend.id}), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="badge badge-secondary">
                  You are friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
